{% extends 'base.html.twig' %}

{% block title %}Welcome to News Portal!{% endblock %}

{% block categories %}
    <ul class="categories">
    {% for category in categories %}
        <li>
            <a href="{{ path('category_view', {slug: category.slug}) }}">{{ category.name }}</a>
        </li>
    {% endfor %}
    </ul>
{% endblock %}

{% block body %}
<main class="index" role="main">
    {% set mainPost = posts.shift %}
    <div class="main-post">
        <img class="post-image" src="{{ mainPost.image | imagePath }}" alt="">
        <small class="text-muted">{{ mainPost.publicationDate }}</small>
        <p class="post-text">
            {{ mainPost.description }}
        </p>
        <button type="button" class="btn btn-sm btn-outline-secondary">Read more</button>
        <div class="clearfix"></div>
    </div>
    <div class="py-5 bg-light">
        <div class="container">
            <div class="row">
            {% for post in partner_posts %}
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <h3>{{ post.title }}</h3>
                            <p class="card-text">
                                {{ post.description | raw }}
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="{{ post.link }}" class="btn btn-sm btn-outline-secondary">Read</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
            </div>
            <div class="row">
            {% for post in posts %}
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img class="card-img-top" src="{{ post.image | imagePath }}" alt="">
                        <div class="card-body">
                            <p class="card-text">
                                {{ post.description }}
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-secondary">Read</button>
                                </div>
                                <small class="text-muted">{{ post.publicationDate }}</small>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
            </div>
        </div>
    </div>
</main>
{% endblock %}
