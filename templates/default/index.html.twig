{% extends 'base.html.twig' %}

{% block body %}
<main class="index" role="main">
    {% set mainPost = posts.shift %}
    <div class="main-post">
        <img class="post-image" src="{{ mainPost.image == 'default.png' ? ('/img/' . mainPost.image) : mainPost.image }}" alt="">
        <small class="text-muted">{{ mainPost.publicationDate }}</small>
        <p class="post-text">
            {{ mainPost.description }}
        </p>
        <button type="button" class="btn btn-sm btn-outline-secondary">Read more</button>
        <div class="clearfix"></div>
    </div>
    <div class="py-5 bg-light">
        <div class="container">
            <div class="row">
            {% for post in posts %}
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img class="card-img-top" src="{{ post.image == 'default.png' ? ('/img/' . post.image) : post.image }}" alt="">
                        <div class="card-body">
                            <p class="card-text">
                                {{ post.description }}
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-secondary">Read</button>
                                </div>
                                <small class="text-muted">{{ post.publicationDate }}</small>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
            </div>
        </div>
    </div>
</main>
{% endblock %}
